@{
    ViewBag.Title = "Welcome to ExplainMe";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{    
    <div id="form-container">       
            <h1>Explain.Me</h1>
            <span id="description">This is an application built with <a href="http://signalr.net/" title="SignalR" target="_blank">SignalR</a></span>
            <div id="input-box">
                <label for="username">Type a user name and room name to start</label>
                <input type="text" id="username" class="input-medium search-query" placeholder="Username" name="username" maxlength="15" autofocus="autofocus" required="required" />
                <input type="text" id="roomname" class="input-medium search-query" placeholder="Roomname" name="roomname" maxlength="15" required="required"/>
                <button type="submit" class="btn btn-large btn-primary">Let's chat!</button>               
            </div>
    </div>
}