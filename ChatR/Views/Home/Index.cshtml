@{
    ViewBag.Title = "Welcome to ExplainMe";
}
<style>
    body {
        background-image: url('../../Content/images/wrapper.png');
        background-repeat: repeat-x;
    }
</style>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div id="form-container">
        <h1>Explain.Me</h1>

        <label>Type a random user name and room name to start</label>
        <p>Reminder: Only those who enter the same room name will be able to work together.</p>
        <input type="text" id="username" class="input-medium search-query" placeholder="Username" name="username" maxlength="15" autofocus="autofocus" required="required" /> <br />
        <input type="text" id="roomname" class="input-medium search-query" placeholder="Roomname" name="roomname" maxlength="15" required="required" /> <br />
        <button type="submit" class="btn btn-large btn-primary">Start!</button>
    </div>
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <h2>
                <img src="../../Content/images/glyphicons_012_heart.png" alt="What is Explain.Me" />
                What is Explain.Me?
            </h2>
            <p>
                Explain.Me is an online collaboration platform that makes it easy for people to discuss and organize ideas with anyone, anytime, anywhere.
            </p>
        </div>
        <div class="span3">
            <h2>
                <img src="../../Content/images/glyphicons_043_group.png" alt="What is Explain.Me" />
                Outstanding speed
            </h2>
            <p>
                By merging a sleek, intuitive interface with all the new technologies we’re out to revolutionize the way the world’s most productive teams communicate.
            </p>
        </div>
        <div class="span3">
            <h2>
                <img src="../../Content/images/glyphicons_069_gift.png" alt="What is Explain.Me" />
                Push notificaftions
            </h2>
            <p>
                Receive notifications about new posts right in your inbox. Then just reply to the email and it will appear in your team discussion.
            </p>
        </div>
    </div>
    <h2 style="text-align: center; margin-top: 1em" >Have questions? We'd love to hear from you!</h2>
</div>